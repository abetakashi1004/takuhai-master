
<div class="container">
  <div class="row">
    <div class="col col-lg-2"></div>
    <div class="col col-lg-8">
    <h2>会員登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th class="col-lg-2">名前</th>
            <td><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
          </tr>
          <tr>
            <th>郵便番号</th>
            <td><%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %></td>
          </tr>
          <tr>
            <th>住所</th>
            <td><%= f.text_area :address, autofocus: true, autocomplete: "address", class: 'address-place' %></td>
          </tr>
          <tr>
            <th>電話番号</th>
            <td><%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <th>パスワード  </th>
            <td><%= f.password_field :password, placeholder: "６桁以上で入力してください", autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <th></th>
            <td><%= f.submit "会員登録", class: 'btn btn-primary sign_up_botton' %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
    </div>
  </div>
</div>

