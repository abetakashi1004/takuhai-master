

<div class="container">
  <div class="row">
    <div class="col">
      <h2>会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :名前 %><br />
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class="field">
          <%= f.label :郵便番号 %><br />
          <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
        </div>

        <div class="field">
          <%= f.label :住所 %><br />
          <%= f.text_area :address, autofocus: true, autocomplete: "address", class: 'address-place' %>
        </div>

        <div class="field">
          <%= f.label :電話番号 %><br />
          <%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <% end %><br />
          <%= f.password_field :password, placeholder: "６桁以上で入力してください", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "登録", class: 'btn btn-primary sign_up_botton' %>
        </div>
      <% end %>
    </div>
  </div>
</div>