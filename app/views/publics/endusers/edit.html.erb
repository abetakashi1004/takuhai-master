
<div class="container">
	<div class="row">
		<div class="col">
			<i class="far fa-thumbs-up fa-4x"></i><button type="button" class="btn btn-info" data-toggle="modal" data-target="#comment_modal" >配達員にコメントする</button>
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div class="col-lg-2"></div>
		<div class="col-lg-8">
			<h3>ユーザー情報編集</h3>
			<%= form_for(@enduser) do |f| %>
	        <table class="table">
		        <tbody>
		          <tr>
		            <th>名前</th>
		            <td><%= f.text_field :name %></td>
		          </tr>
		          <tr>
		            <th>郵便番号</th>
		            <td><%= f.text_field :postcode %></td>
		          </tr>
		          <tr>
		            <th>住所</th>
		            <td><%= f.text_area :address %></td>
		          </tr>
		          <tr>
		            <th>電話番号</th>
		            <td><%= f.text_field :phone_number %></td>
		          </tr>
		          <tr>
		            <th>メールアドレス</th>
		            <td><%= f.text_field :email %></td>
		          </tr>
		          <tr>
		            <th></th>
		            <td><%= f.submit '編集' , class: 'btn btn-primary' %></td>
		          </tr>
		        </tbody>
	        </table>
	        <% end %>
		</div>
	</div>
</div>

