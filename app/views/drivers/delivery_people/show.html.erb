
<div class="container">
  <div class="row">
    <div class="col col-lg-2"></div>
    <div class="col col-lg-8">
      <h2>マイページ</h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th class="col-lg-5"></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
                <td><%= attachment_image_tag @delivery_person, :face_photo, :fill, 200, 200, format: 'jpeg' %></td>
                <td><p class="driver_name">名前　<%= @delivery_person.name %></p>
                    <p class="driver_career">経歴　<%= @delivery_person.career %>年目</p>
                    <p class="deliver_favorite"><i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
                       いいね　<%= @delivery_person.favorites.count %> 件</p>
                    <p class="deliver_comment"><i class="far fa-comment-dots"></i> コメント <%= @delivery_person.comments.count %> 件</p>
                </td>
            </tr>
          </tbody>
       </table>
       <h2>コメント一覧</h2>
        <table class="table">
          <thead>
            <tr>
              <th class="col-lg-5">ユーザー名</th>
              <th>コメント内容</th>
            </tr>
          </thead>
          <% @comments.each do |f| %>
          <tbody>
            <tr>
              <td><%= f.enduser.name %></td>
              <td><%= f.comment %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
    </div>
  </div>
</div>
