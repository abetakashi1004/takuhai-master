


<div class="container">
  <div class="row">
    <div class="col">
      <h2>ドライバー登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :名前 %><br />
          <%= f.text_field :name, autofocus: true%>
        </div>

        <div class="field">
          <%= f.label :ドライバー歴 %><br />
          <%= f.text_field :career, autofocus: true, autocomplete: "career" %>
        </div>

        <div class="field">
          <%= f.label :営業所コード %><br />
          <%= f.text_field :sales_office_id, autofocus: true, autocomplete: "sales_office_id" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード  %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "登録" %>
        </div>
      <% end %>
    </div>
  </div>
</div>