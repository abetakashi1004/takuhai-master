<div class="container">
	<div class="row">
		<div class="col-md-2"></div>
		<div class="col-md-8">
			<h1 class="main-title">配達報告</h1>
			<h3><span class="delivery_count">持ち出し</span><%= @takeout.count %>件</h3>
			<h3><span class="delivery_count">配達完了</span><%= @completes.count %>件</h3>
			<h3><span class="delivery_count">戻り　　</span><%= @backs.count %>件</h3>
			<h3><span class="delivery_count">残　　　</span><%= @yets.count  %>件</h3>
			<p class="not_delivery"><%= flash.now[:not_delivery] %></p>
			<%= form_for(@delivery, url: drivers_deliveries_path) do |f| %>
			<%= f.hidden_field :delivery_person_id, value: current_delivery_person.id %>
			<%= f.label :伝票番号を入力してください %><br>
			<%= f.text_field :package_id %>
			<div class="decision">
				<label class="decision-boton btn-success"><%= f.radio_button :status, :配達完了 , {:checked => true}  %>配達完了</label>
				<label class="decision-boton btn-danger"><%= f.radio_button :status, :不在  %> 不在</label>
			</div>
			<%= f.submit '配達状況を登録する', class: ' btn-primary delivery-button' %>
			<% end %>
		</div>
	</div>
</div>
